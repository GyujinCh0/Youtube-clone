extends base.pug

block content
  div
    video#preview
    button#actionBtn Start Recording
  if errorMessage
    span=errorMessage
  form(method="POST", enctype="multipart/form-data")
    label(for="video") Video File
    input(type="file", accept="video/*", required, id="video", name="video")
    label(for="thumb") Thumbnail File
    input(type="file", accept="image/*", required, id="thumb", name="thumb")
    input(placeholder="Title", required, type="text", name="title")
    input(placeholder="Description", required, type="text", name="description",minlength=5,maxlength=80)
    input(placeholder="Hashtags, separated by comma.", required, type="text", name="hashtags", minlength=20)
    input(type="submit", value="Upload Video")      

block scripts
  script(src="/static/js/recorder.js")
